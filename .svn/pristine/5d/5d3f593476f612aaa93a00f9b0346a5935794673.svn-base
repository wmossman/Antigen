//PRIVATE
function boundingBox(grid, pattern, x, y){
    for(var a = x; a < x+pattern.length;a++){
        for(var b = y; b < y+pattern[0].length; b++){
            if(pattern[a-x][b-y] == grid[a][b]._color) continue;
            else if(pattern[a-x][b-y] == 0) continue;
            else return false;
        }
    }
    return true;
}
